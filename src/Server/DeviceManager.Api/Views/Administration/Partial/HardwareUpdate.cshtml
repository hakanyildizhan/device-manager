@using DeviceManager.Service.Model

@model DeviceDetail

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="updateHardwareModalLongTitle">Update this entry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Ajax.BeginForm("UpdateHardware", "Administration", new { @class = "form-horizontal", role = "form" }, new AjaxOptions { OnSuccess = "onUpdateSuccess" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Group)
                    @Html.TextBoxFor(m => m.Group, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Group, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Info)
                    @Html.TextBoxFor(m => m.Info, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Info, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConnectedModuleInfo)
                    @Html.TextBoxFor(m => m.ConnectedModuleInfo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConnectedModuleInfo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address)
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address2)
                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <div id="update-error" style="color:red; display:block;"/>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        }
    </div>
</div>